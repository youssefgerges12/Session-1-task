A = 100 
B = 200 
C = 300

total_budget = 500

total_cost = A + B + C

if total_cost <= total_budget:
    money_left = total_budget - total_cost
    print(f"The total cost is {total_cost:.2f}. You are within budget.")
    print(f"You have {money_left:.2f} left.")
else:
    money_needed = total_cost - total_budget
    print(f"The total cost is {total_cost:.2f}. You have exceeded the budget.")
    print(f"You need ${money_needed:.2f} more.")
